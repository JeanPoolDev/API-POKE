---

interface Props {
  name: string;
  url: string;
  isbig?: boolean;
}

const { name, url, isbig = false } = Astro.props;
const id = url.split('/').at(-2)

const imageSrc = `https://raw.githubusercontent.com/PokeAPI/
sprites/master/sprites/pokemon/other/official-artwork/${id}.png`
---

<a
  href=`/pokemon/${id}`
  class:list={[
    'rounded flex flex-col justify-center items-center p-2',
    {
      ' shadow-lg': !isbig
    }
  ]}
>
<img
  transition:name={`${name}-image`}
  class:list={[
    {
      'w-22 h-22': !isbig,
      'w-26 h-26': isbig
    }
  ]}
  src={imageSrc} 
  alt={name}
>
<span 
  class:list={[
    'capitalize',
    {
      'text-3xl text-blue-600': isbig,
      'text-xl': !isbig
    }
  ]}
>
  #{id} {name}
</span>
</a>